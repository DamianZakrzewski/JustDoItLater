<UserControl x:Class="JustDoItLater.UserControls.TDViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="200" Height="60">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Label x:Name="Title" Grid.Row="0" Content="{Binding Path=Title}" Height="30" Width="150" FontSize="14" Style="{StaticResource MaterialDesignLabel}" />
        <Label x:Name="DateLabel" Grid.Row="1" Content="{Binding Path=Date}" Height="20" Width="150" FontSize="10" Style="{StaticResource MaterialDesignLabel}" />
    </Grid>
</UserControl>